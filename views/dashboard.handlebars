
 
<section class="dashboard bg-light mb-3 text-center" style="max-width: 18rem;">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-content">Content</label>
      <input id="post-content" name="post-content" />
    </div>
    <button type="submit" class="btn btn-outline-dark mt-3">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
   {{#each posts as |post|}}
  <div>
    {{>post--info post}}
    <a href="/dashboard/edith/{{post.id}}"><button class="btn btn-outline-dark">Edit</button></a>
  </div>
   {{/each}}
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>