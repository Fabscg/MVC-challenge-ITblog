<article class="post">
  <a href="/post/{{id}}">
    <div class="title">
      {{title}}
    </div>
    <div class="meta">
      <div class="text">
        {{post_content}}
      </div>
      <br />
      by
      <p>{{user.username}}</p>
      on
      {{format_date created_at}}
      |
      <a href="/post/{{id}}">{{comments.length}}
        {{format_plural "comment" comments.length}}</a>
    </div>
  </a>

</article>