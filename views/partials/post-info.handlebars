<div class="card mb-6">
    <header class="card-header card-header-title bg-light">
        <div class="column">
            <p class="">
                <a href="/post/{{id}}" class="text-black in-capitalized">{{title}}</a>
            </p>
        </div>

        <div class="column">
            <span class=""></span>
        </div>
    </header>
    <div class="card-content">
        <divclass="content">
            {{post_content}}
    </div>
    <div>
        <b>{{user.name}}</b> |
        <a href="https://github.com/{{user.github}}"><i class="fab fa-github"></i></a>
        |{{format_date created_at}} | <a href="/post/{{id}}">{{comment.length}}
            {{format_plural "comment" comments.length}}</a>
    </div>
</div>