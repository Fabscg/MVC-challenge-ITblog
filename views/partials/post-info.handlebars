<article class="post">
  <a href="/post/{{id}}">
    <div class="title">
      {{title}}
    </div>
    <div class="meta">
      <div class="text">
        {{content}}
      </div>
      <br />
      by
      <p>{{user.username}}</p>
      on
      {{format_date created_at}}
      |
      {{comments_length}}
      {{format_plural "comment" comments.length}}
    </div>
  </a>

</article>